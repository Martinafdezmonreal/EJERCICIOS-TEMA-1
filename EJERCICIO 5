import random

def generar_adn(n):
    bases = ['A', 'T', 'C', 'G']
    cadena = ''.join(random.choice(bases) for _ in range(n))
    conteo = {base: cadena.count(base) for base in bases}
    return cadena, conteo

# Ejemplo de uso
if __name__ == "__main__":
    longitud = 50  
    adn, conteo = generar_adn(longitud)
    print(f"Cadena de ADN: {adn}")
    print("Conteo de bases:")
    for base, cantidad in conteo.items():
        print(f"{base}: {cantidad}")